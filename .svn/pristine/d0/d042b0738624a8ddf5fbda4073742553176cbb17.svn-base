              this.boostModal = false;
            }
          }
        ]
      });
      return alert.present();
    },

    /** ë¡œë”© **/
    async showLoading() {
      this.loading = await this.loadingController.create({
        message: "Loading...",
        duration: 0
      });
      await this.loading.present();
    }
  }
