      itemList: "",
      cdnNm: "",
      cdnThumbNm: "",
      cdnThumbNmProfile: "",
      lodingCheck: false,
      openChatLodingCheck: false,
      bookmarkCheckDisabled: true, // ë¶ë§ˆí¬ í™œì„±í™”ì—¬ë¶€ ì²´í¬
