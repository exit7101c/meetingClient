    // ì´ˆê¸°í™”
  },
  mounted() {
    //ì´ˆê¸°í™”
  },
  beforeUnmount() {
    // ì´ˆê¸°í™”
  },
  data() {
    return {
      calendarCheck: IconCalCheck,
      menuIcon: IconMenu,
      locationOutline,
      userIcon: IconMyUser,
      calendarIcon: IconCalCheck,
      starOutline,
      ellipsisVertical,
      heartOutline,
      flameOutline,

      // chatDetailMap: {},
      bookmarkYn: "",
      msg: "",
      dueDate: "",
      inviteYn: "",
      ssUserYn: "",
      mainFileId: "",
      isPopover: false,
      regUserKey: "",
      userPhotoId: "",
      attendYn: "",
      chatroomId: "",
      loading: null,
      attendChk: "",
      leaderConfirmYn: "",
      attendRegTime: "",
      // recentTime: "",

      coupon: "",
